<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haitaotao.mapper.PermissionMapper" >

	<resultMap id="BaseResultMap" type="com.haitaotao.entity.Permission" >
		<id column="id" property="id" />
		<result column="role_id" property="roleId" />
		<result column="permission" property="permission" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="deleted" property="deleted" />
	</resultMap>

	<sql id="Base_Column_List" >
		`id`, `role_id`, `permission`, `create_time`, `update_time`, `deleted`
	</sql>

	<!-- 根据PrimaryKey查询权限表 -->
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
		select
		<include refid="Base_Column_List" />
		from haitaotao_permission
		<where>
			id = #{id}
		</where>
	</select>

	<!-- 条件查询权限表 -->
	<select id="selectByCondition" resultMap="BaseResultMap" parameterType="com.haitaotao.entity.Permission" >
		select
		<include refid="Base_Column_List" />
		from haitaotao_permission
		<where>
			<if test="id != null" >
				and `id` = #{id}
			</if>
			<if test="roleId != null" >
				and `role_id` = #{roleId}
			</if>
			<if test="permission != null and permission != ''" >
				and `permission` = #{permission}
			</if>
			<if test="createTime != null" >
				and `create_time` = #{createTime}
			</if>
			<if test="updateTime != null" >
				and `update_time` = #{updateTime}
			</if>
			<if test="deleted != null" >
				and `deleted` = #{deleted}
			</if>
		</where>
	</select>

    <select id="listNameByRoleIds" resultType="java.lang.String">
		select `permission` from haitaotao_permission where deleted = 0 and role_id in
		<foreach collection="list" item="roleId" open="(" separator="," close=")">
			#{roleId}
		</foreach>
	</select>

    <!-- 插入权限表 -->
	<insert id="insertSelective" parameterType="com.haitaotao.entity.Permission" >
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into haitaotao_permission
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="roleId != null" >
                `role_id`,
            </if>
			<if test="permission != null" >
                `permission`,
            </if>
			<if test="createTime != null" >
                `create_time`,
            </if>
			<if test="updateTime != null" >
                `update_time`,
            </if>
			<if test="deleted != null" >
                `deleted`,
            </if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="roleId != null" >
				#{roleId},
			</if>
			<if test="permission != null" >
				#{permission},
			</if>
			<if test="createTime != null" >
				#{createTime},
			</if>
			<if test="updateTime != null" >
				#{updateTime},
			</if>
			<if test="deleted != null" >
				#{deleted},
			</if>
		</trim>
	</insert>

	<!-- 根据PrimaryKey更新权限表 -->
	<update id="updateByPrimaryKey" parameterType="com.haitaotao.entity.Permission" >
		update haitaotao_permission
		<set >
			<if test="roleId != null" >
				`role_id` = #{roleId},
			</if>
			<if test="permission != null and permission != ''" >
				`permission` = #{permission},
			</if>
			<if test="createTime != null" >
				`create_time` = #{createTime},
			</if>
			<if test="updateTime != null" >
				`update_time` = #{updateTime},
			</if>
			<if test="deleted != null" >
				`deleted` = #{deleted},
			</if>
		</set>
		<where>
			id = #{id}
		</where>
	</update>

	<!-- 根据PrimaryKey删除权限表 -->
	<update id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from haitaotao_permission where id = #{id}
	</update>

	<!-- 根据PrimaryKey批量删除权限表 -->
	<update id="batchDeleteByPrimaryKey" parameterType="java.lang.Long">
        <if test="null != list and list.size > 0">
            delete from haitaotao_permission where id in
            <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
            </foreach>
        </if>
	</update>

</mapper>
