<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haitaotao.mapper.RoleMapper" >

	<resultMap id="BaseResultMap" type="com.haitaotao.entity.Role" >
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="desc" property="desc" />
		<result column="enabled" property="enabled" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="deleted" property="deleted" />
	</resultMap>

	<sql id="Base_Column_List" >
		`id`, `name`, `desc`, `enabled`, `create_time`, `update_time`, `deleted`
	</sql>

	<!-- 根据PrimaryKey查询角色表 -->
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
		select
		<include refid="Base_Column_List" />
		from haitaotao_role
		<where>
			id = #{id}
		</where>
	</select>

	<!-- 条件查询角色表 -->
	<select id="selectByCondition" resultMap="BaseResultMap" parameterType="com.haitaotao.entity.Role" >
		select
		<include refid="Base_Column_List" />
		from haitaotao_role
		<where>
			<if test="id != null" >
				and `id` = #{id}
			</if>
			<if test="name != null and name != ''" >
				and `name` = #{name}
			</if>
			<if test="desc != null and desc != ''" >
				and `desc` = #{desc}
			</if>
			<if test="enabled != null" >
				and `enabled` = #{enabled}
			</if>
			<if test="createTime != null" >
				and `create_time` = #{createTime}
			</if>
			<if test="updateTime != null" >
				and `update_time` = #{updateTime}
			</if>
			<if test="deleted != null" >
				and `deleted` = #{deleted}
			</if>
		</where>
	</select>
    <select id="listNameByIds" resultType="java.lang.String">
		select `name` from haitaotao_role where enabled = 1 and deleted = 0 and id in
		<foreach collection="list" item="id" open="(" separator="," close=")">
			#{id}
		</foreach>
	</select>

    <!-- 插入角色表 -->
	<insert id="insertSelective" parameterType="com.haitaotao.entity.Role" >
		<selectKey resultType="java.lang.Long" keyProperty="id" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
		insert into haitaotao_role
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="name != null" >
                `name`,
            </if>
			<if test="desc != null" >
                `desc`,
            </if>
			<if test="enabled != null" >
                `enabled`,
            </if>
			<if test="createTime != null" >
                `create_time`,
            </if>
			<if test="updateTime != null" >
                `update_time`,
            </if>
			<if test="deleted != null" >
                `deleted`,
            </if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="name != null" >
				#{name},
			</if>
			<if test="desc != null" >
				#{desc},
			</if>
			<if test="enabled != null" >
				#{enabled},
			</if>
			<if test="createTime != null" >
				#{createTime},
			</if>
			<if test="updateTime != null" >
				#{updateTime},
			</if>
			<if test="deleted != null" >
				#{deleted},
			</if>
		</trim>
	</insert>

	<!-- 根据PrimaryKey更新角色表 -->
	<update id="updateByPrimaryKey" parameterType="com.haitaotao.entity.Role" >
		update haitaotao_role
		<set >
			<if test="name != null and name != ''" >
				`name` = #{name},
			</if>
			<if test="desc != null and desc != ''" >
				`desc` = #{desc},
			</if>
			<if test="enabled != null" >
				`enabled` = #{enabled},
			</if>
			<if test="createTime != null" >
				`create_time` = #{createTime},
			</if>
			<if test="updateTime != null" >
				`update_time` = #{updateTime},
			</if>
			<if test="deleted != null" >
				`deleted` = #{deleted},
			</if>
		</set>
		<where>
			id = #{id}
		</where>
	</update>

	<!-- 根据PrimaryKey删除角色表 -->
	<update id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from haitaotao_role where id = #{id}
	</update>

	<!-- 根据PrimaryKey批量删除角色表 -->
	<update id="batchDeleteByPrimaryKey" parameterType="java.lang.Long">
        <if test="null != list and list.size > 0">
            delete from haitaotao_role where id in
            <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
            </foreach>
        </if>
	</update>

</mapper>
